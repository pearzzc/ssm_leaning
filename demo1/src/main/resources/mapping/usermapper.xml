<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.UserDao">

    <select id="update" resultType="com.example.demo.domain.User">
    update user set user.name=#{name},user.password=#{password},user.age=#{age},user.sex=#{sex},user.address=#{address} where user.id =#{id}
  </select>
</mapper>